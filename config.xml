<?xml version='1.0' encoding='utf-8'?>
<widget id="com.actualsoft.jmap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mis Prácticas</name>
    <description>
        Una aplicación libre para que puedas mejorar tus entrenamientos!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
    <icon src="src/assets/icon.png" density="ldpi" />
              <icon src="src/assets/icon.png" density="mdpi" />
        <icon src="src/assets/icon.png" density="hdpi" />
        <icon src="src/assets/icon.png" density="xhdpi" />
        <preference name="android-minSdkVersion" value="24"/>
        <preference name="android-targetSdkVersion" value="28"/>
        <allow-intent href="market:*" />
          
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
  <plugin name="@mauron85/cordova-plugin-background-geolocation" spec="@mauron85/cordova-plugin-background-geolocation@~3.1.0">

  
 <variable name="GOOGLE_PLAY_SERVICES_VERSION" value="11+" />
  <variable name="ANDROID_SUPPORT_LIBRARY_VERSION" value="26+" />
  
  <variable name="ALWAYS_USAGE_DESCRIPTION" value="App requires background tracking " />
  <variable name="MOTION_USAGE_DESCRIPTION" value="App requires motion detection" /> 
    </plugin>

    
</widget>
